<div class="fluid-row">
  <div class="span8">
    <div class="well"><h1>Entrees</h1></div>

  {{#with Electiontron.ballotController}}
    {{#if votingForSidesAllowed }}
      <p>You are voting for the {{sideCount}} side.</p>
    {{ else }}
      <button {{action voteDesserts}}>Continue</button>
    {{/if}}
  {{/with}}
  {{#each Electiontron.entriesController.sides}}
    <div {{bindAttr class="selected :entry :span3"}} {{action voteFor id target="Electiontron.ballotController"}} >
      <h3>{{name}}</h3>
      <img {{bindAttr src="largeUrl"}}/>
      <h6>{{chef}}</h6>
      {{selected}}
    </div>
  {{/each}}
  </div>

  <div class="span3">
    <h3>Your ballot</h3>

    <ol>
    {{#each Electiontron.ballotController.sides}}
      <li>{{name}}</li>
    {{/each}}
    </ol>
  </div>
</div>
